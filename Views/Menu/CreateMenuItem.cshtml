@model Labb2_MVC.Models.Dish

@{
    ViewData["Title"] = "New MenuItem";
}

<section class="custom-menu-page">
    <div class="custom-menu-form-container mx-auto p-5">
        <h2 class="text-center mb-4">Add New Dish</h2>

        <form asp-action="CreateMenuItem" method="post" class="custom-menu-form">
            <!-- Fält för namn på maträtt -->
            <div class="custom-form-group mb-4">
                <label asp-for="NameOfDish" class="custom-label">Dish Name</label>
                <input asp-for="NameOfDish" class="custom-input" />
                <span asp-validation-for="NameOfDish" class="custom-error-message"></span>
            </div>

            <!-- Fält för pris -->
            <div class="custom-form-group mb-4">
                <label asp-for="Price" class="custom-label">Price</label>
                <input asp-for="Price" class="custom-input" type="number" step="0.01" min="0" />
                <span asp-validation-for="Price" class="custom-error-message"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                <label asp-for="IsAvailable" class="form-check-label">Is Available</label>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>

            <!-- Submit-knapp -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Add Dish</button>
                <a href="@Url.Action("ManageMenu", "Menu")" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</section>