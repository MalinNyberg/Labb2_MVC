@model Dish

@{
    ViewBag.Title = "UpdateDish";
}

<h2>Update Dish</h2>

<form asp-controller="Menu" asp-action="UpdateDish" method="post">
    <div class="form-group">
        <label asp-for="MenuId"></label>
        <input asp-for="MenuId" class="form-control" readonly />
        <span asp-validation-for="MenuId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NameOfDish"></label>
        <input asp-for="NameOfDish" class="form-control" />
        <span asp-validation-for="NameOfDish" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    
    <div class="form-group form-check">
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <label asp-for="IsAvailable" class="form-check-label">Is Available</label>
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("ManageMenu")" class="btn btn-secondary">Cancel</a>
</form>