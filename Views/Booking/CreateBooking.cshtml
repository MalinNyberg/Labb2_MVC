@model Labb2_MVC.Models.Booking

@{
    ViewData["Title"] = "New Booking";
}

<section class="custom-booking-page">
    <div class="custom-booking-form-container mx-auto p-5">
        <h2 class="text-center mb-4">Create a Booking</h2>

        <form asp-action="CreateBooking" method="post" class="custom-booking-form">
            <div class="custom-form-group mb-4">
                <label asp-for="CustomerName" class="custom-label">Customer Name</label>
                <input asp-for="CustomerName" class="custom-input" />
                <span asp-validation-for="CustomerName" class="custom-error-message"></span>
            </div>

            <div class="custom-form-group mb-4">
                <label asp-for="PhoneNumber" class="custom-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="custom-input" />
                <span asp-validation-for="PhoneNumber" class="custom-error-message"></span>
            </div>

            <div class="custom-form-group mb-4">
                <label asp-for="Email" class="custom-label">Email</label>
                <input asp-for="Email" class="custom-input" />
                <span asp-validation-for="Email" class="custom-error-message"></span>
            </div>

            <div class="custom-form-group mb-4">
                <label asp-for="Date" class="custom-label">Select Date</label>
                <input asp-for="Date" class="custom-input" type="date"
                       value="@DateTime.Now.ToString("yyyy-MM-dd")"
                       min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Date" class="custom-error-message"></span>
            </div>

            <div class="custom-form-group mb-4">
                <label for="time" class="custom-label">Select Time</label>
                <input name="time" class="custom-input" type="time"
                       value="@DateTime.Now.ToString("HH:mm")" />
                <span asp-validation-for="Date" class="custom-error-message"></span>
            </div>

            <div class="custom-form-group mb-4">
                <label asp-for="NumberOfPeople" class="custom-label">Guests</label>
                <input asp-for="NumberOfPeople" class="custom-input" type="number" min="1" />
                <span asp-validation-for="NumberOfPeople" class="custom-error-message"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="custom-btn-submit">Create Booking</button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}