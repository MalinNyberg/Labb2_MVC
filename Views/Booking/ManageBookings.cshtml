@model List<Booking>

@{
    ViewData["Title"] = "Manage Bookings";
}

<h2>Manage Bookings</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Booking Id</th>
                <th>Customer Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Guests</th>
                <th>Date</th>
                <th>Actions</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Id</td>
                    <td>@booking.CustomerName</td>
                    <td>@booking.Email</td>
                    <td>@booking.PhoneNumber</td>
                    <td>@booking.NumberOfPeople</td>
                    <td>@booking.Date.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <!-- Edit button -->
                        <a href="@Url.Action("UpdateBooking", new { id = booking.Id })" class="btn btn-primary btn-sm">Edit</a>

                        <!-- Delete button -->
                        <form method="post" action="@Url.Action("Delete", new { id = booking.Id })" style="display:inline-block">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this booking?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No bookings available.</p>
}

<!-- Create New Booking Button -->
<a href="@Url.Action("CreateBooking", "Booking")" class="btn btn-success">Create New Booking</a>